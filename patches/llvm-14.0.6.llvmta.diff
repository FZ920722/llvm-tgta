+PreservedAnalyses HelloWorldPass::run(Function &F, FunctionAnalysisManager &AM) {
+  // (1) 删除noreturn函数；
+  if (F.hasFnAttribute(Attribute::NoReturn)) {
+    F.deleteBody();
+    F.removeFnAttr(Attribute::NoReturn);
+    return PreservedAnalyses::none();
+  }
+
+  // (2) 删除有内链汇编的函数；
+  for (auto &BB : F) {
+    for (auto &I : BB) {
+      if (auto *CI = dyn_cast<CallInst>(&I)) {
+        if (CI->isInlineAsm()) {
+          F.deleteBody();
+          return PreservedAnalyses::none();
+        }
+      }
+    }
+  }
+
+  // (3) 删除noreturn的函数调用指令；
+  bool IRModified = false;
+  for (auto &BB : F) {
+    for (auto instI = BB.begin(), instE = BB.end(); instI != instE; ) {
+      Instruction &I = *instI++;
+      if (auto *callInst = dyn_cast<CallInst>(&I)) {
+        Function *calledFunc = callInst->getCalledFunction();
+        bool IsNoReturn = callInst->hasFnAttr(Attribute::NoReturn) || (calledFunc && calledFunc->hasFnAttribute(Attribute::NoReturn));
+        if (!IsNoReturn)
+          continue;
+        callInst->removeFnAttr(Attribute::NoReturn);
+        IRModified = true;
+      }
+    }
+  }
+
+  // === 3. 版本三：替换所有 unreachable 为 ret，保留 BB ===
+  for (auto &BB : F) {
+    Instruction *TI = BB.getTerminator();
+    if (isa<UnreachableInst>(TI)) {
+      IRBuilder<> B(TI);
+      if (F.getReturnType()->isVoidTy())
+        B.CreateRetVoid();
+      else
+        B.CreateRet(UndefValue::get(F.getReturnType()));
+      TI->eraseFromParent();
+      IRModified = true;
+    }
+  }
+  return IRModified ? PreservedAnalyses::none(): PreservedAnalyses::all();
 }
